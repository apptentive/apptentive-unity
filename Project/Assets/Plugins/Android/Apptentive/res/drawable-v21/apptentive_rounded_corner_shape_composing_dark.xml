<!-- Referencing theme attributes in drawable XML is not supported until Lollipop(21)
  See https://code.google.com/p/android/issues/detail?id=26251 for details
  For pre-21 support, a dark and light version of the drawables have to be defined with static values.
  For 21 and after, both dark/light versions have the same content
  -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle">
    <solid android:color="?attr/apptentiveCardBackground"/>
    <stroke android:width="1dp"
            android:color="?attr/apptentiveCardBorderColor"/>
    <padding android:left="0dp"
             android:top="0dp"
             android:right="0dp"
             android:bottom="0dp"/>
    <corners android:topLeftRadius="0dp"
             android:topRightRadius="0dp"
             android:bottomLeftRadius="4dp"
             android:bottomRightRadius="4dp"/>
</shape>