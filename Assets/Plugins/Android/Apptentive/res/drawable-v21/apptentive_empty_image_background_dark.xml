<!-- Referencing theme attributes in drawable XML is not supported till Lollipop(21)
  See https://code.google.com/p/android/issues/detail?id=26251 for details
  For pre-21 support, a dark and light version of the drawables have to be defined with static values.
  For 21 and after, both dark/light versions have the same content
  -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle">
    <solid android:color="@android:color/transparent"/>
    <stroke android:width="1dp"
            android:dashWidth="4dp"
            android:dashGap="4dp"
            android:color="?attr/apptentiveCardBorderColor"/>
    <padding android:bottom="4dp"
             android:left="4dp"
             android:right="4dp"
             android:top="4dp"/>
    <corners android:topLeftRadius="4dp"
             android:topRightRadius="4dp"
             android:bottomLeftRadius="4dp"
             android:bottomRightRadius="4dp">
    </corners>
</shape>